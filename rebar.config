{lib_dirs,["deps"]}.
{sub_dirs, ["rel"]}.
{src_dirs, ["src", "src/elements", "test"]}.

%%{require_otp_vsn, "R13B04|R14"}.

{cover_enabled, true}.

{erl_opts, [debug_info, fail_on_warning]}.

{deps, [
    {mochiweb, ".*", {git, "git://github.com/mochi/mochiweb.git", {tag, "1.5.1"}}},
    {nitrogen_core, ".*", {git, "git://github.com/nitrogen/nitrogen_core", "HEAD"}},
    {nprocreg,      ".*", {git, "git://github.com/nitrogen/nprocreg", "HEAD"}},
    {simple_bridge, ".*", {git, "git://github.com/nitrogen/simple_bridge", "HEAD"}},
    {sync,          ".*", {git, "git://github.com/rustyio/sync", "HEAD"}},
    {'ec_cli', ".*", {git, "git@github.com:RomanShestakov/ec_cli.git", "master"}},
    {ec_master, ".*", {git, "git@github.com:RomanShestakov/ec_master.git", "master"}},
    {'webmachine', ".*", {git, "git://github.com/basho/webmachine", "HEAD"}},
    {'nitrogen_elements', ".*", {git, "git@github.com:RomanShestakov/nitrogen_elements.git", "HEAD"}}
    %{graphviz_28, ".*", {hg, "http://hg.research.att.com/graphviz_28", "graphviz-2.28"}}
]}.

%% remove rel from ec_master
%% {pre_hooks, [{compile, "rm -rf ../../deps/ec_master/rel"}]}.

{post_hooks, [{compile, "cp ./src/ec_web.config ./ebin/ec_web.config"}]}.

